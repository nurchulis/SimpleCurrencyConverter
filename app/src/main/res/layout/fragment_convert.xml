<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/convert_tab"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.simplecurrencyconverter.fragments.ConvertFragment">

    <TextView
        android:id="@+id/first_currency_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:id="@+id/first_currency_amount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_currency_label"
        android:hint="@string/edit_amount_default"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/second_currency_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_currency_amount"
        />

    <EditText
        android:id="@+id/second_currency_amount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_currency_label"
        android:hint="@string/edit_amount_default"
        android:inputType="numberDecimal" />

</RelativeLayout>
